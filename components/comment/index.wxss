.content {
  width: 100%;
  height: 440rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30rpx;
  box-sizing: border-box;
}
.content .comment-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eeeeee;
  padding-bottom: 30rpx;
  font-size: 30rpx;
}
.content .comment-header .comment-header-cancel {
  color: #999999;
}
.content .comment-body {
  padding: 32rpx 0;
}
.content .comment-footer {
  background-color: #f5f5f5;
  border-radius: 50rpx;
  font-size: 24rpx;
  padding: 15rpx 30rpx;
}
