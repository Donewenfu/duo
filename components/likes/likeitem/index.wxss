.content {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
  padding: 15rpx;
  box-sizing: border-box;
  width: 333rpx;
  margin-bottom: 30rpx;
  height: 464rpx;
}
.content .l-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .l-body .l-body-img {
  width: 100%;
  height: 240rpx;
}
.content .l-body .l-body-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 40rpx;
}
