.content {
  width: 240rpx;
  height: 360rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx #f5f5f5;
}
.content .book-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.content .book-desc {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background-color: #fff;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
}
.content .book-desc .book-title {
  font-size: 24rpx;
  display: block;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.content .book-desc .book-auth {
  display: block;
  font-size: 20rpx;
  color: #999999;
  text-overflow: hidden;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.content .book-desc .book-info {
  width: 100%;
}
.content .book-desc .book-info .book-like {
  display: flex;
  justify-content: flex-end;
  text-align: right;
  font-size: 20rpx;
  color: #999999;
}
