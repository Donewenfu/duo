.content{
  width:40rpx;
  height: 40rpx;
  position: relative;
}
.circle{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background-color: #5186ff;
  border-radius: 50%;
  animation: circleanimate 2s ease-in infinite;
}
.circletwo{
  animation-delay: -1.0s;
}

@keyframes circleanimate{
  0%{
    transform: scale(.3);
    opacity: .5;
  }
  50%{
    transform: scale(1.5);
    opacity: 0;
  }
  100%{
    transform: scale(1);
    opacity: .5;
  }
}

